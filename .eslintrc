{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb/base",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "classes": true,
    "modules": true,
    "jsx": true
  },
  "rules": {
    "comma-dangle": 0,
    "arrow-body-style": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": "warn",
    "no-useless-concat": "warn",
    "block-scoped-var": "error",
    "consistent-return": "error"
  }
}
